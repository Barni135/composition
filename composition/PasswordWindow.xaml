<Window x:Class="composition.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вхід в адміністрування" Height="200" Width="400">
    <Grid>
        <Label Content="Введіть пароль:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-40,0,0"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200"/>
        <Button Content="Увійти" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40,0,0" Click="LoginButton_Click"/>
    </Grid>
</Window>
